@using Tournamentz.BL.Queries
@model List<TeamQueries.My>

@{
    ViewBag.Title = "Moji timovi";
}

<h2>@ViewBag.Title</h2>

<p>Ovo su timovi koje si ti kreirao!</p>

<table class="table table-bordered table-responsive">
    <thead>
    <tr class="info">
        <th class="col-xs-1"></th>
        <th class="col-xs-8">Naziv tima</th>
        <th class="col-xs-3">Akcije</th>
    </tr>    
    </thead>
    <tbody>
    @foreach (TeamQueries.My team in Model)
    {
        <tr>
            <td data-toggle="collapse" data-target="#@team.Id" class="text-center"><i class="fa fa-caret-down" ></i></td>
            <td>@team.Title</td>
            <td>LISTA AKCIJA</td>
        </tr>
        <tr>
            <td colspan="3">
                <div class="collapse" id="@team.Id">
                    <table class="table table-striped table-responsive table-hover">
                        <thead>
                        <tr>
                            <th class="col-xs-8">Nadimak igrača</th>
                            <th class="col-xs-4">Akcije</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (TeamQueries.My.PlayerInfo player in team.Players)
                        {
                            <tr>
                                <td>@player.Nickname</td>
                                <td>AKCIJE</td>
                            </tr>
                        }
                        </tbody>

                    </table>
                    <ul>
                        <li>mat1</li>
                        <li>mat1</li>
                        <li>mat1</li>
                        <li>mat1</li>
                    </ul>
                </div>
            </td>
        </tr>
    }
    </tbody>

    <tfoot>
    <tr>
        <td>@Html.ActionLink("Kreiraj novi!", "New", "Teams")</td>
    </tr>
    </tfoot>

</table>